<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.learn.cxx.drawabledemos.MainActivity">

    <LinearLayout
        android:id="@+id/ll"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <Button
            android:id="@+id/bitmap"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="BitmapDrawable" />

        <Button
            android:id="@+id/ninepatch"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="NinePatchDrawable" />

        <Button
            android:id="@+id/layer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LayerDrawable" />

        <Button
            android:id="@+id/statelist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="StateListDrawable" />

        <Button
            android:id="@+id/levellist"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="LevelListDrawable" />

        <Button
            android:id="@+id/transition"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="TransitionDrawable" />

        <Button
            android:id="@+id/inset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="InsetDrawable" />

        <Button
            android:id="@+id/clip"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ClipDrawable" />

        <Button
            android:id="@+id/scale"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ScaleDrawable" />

        <Button
            android:id="@+id/shape"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="ShapeDrawable" />

    </LinearLayout>

</ScrollView>
